@page
@using CompanyApp.Models;
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Department" class="form-control" disabled />
                <label asp-for="Department" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Project" class="form-control" disabled />
                <label asp-for="Project" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Surname" class="form-control" placeholder="Please enter your surname." />
                <label asp-for="Input.Surname" class="form-label"></label>
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Input.Sex" class="form-control" asp-items="new SelectList(new string[] { SexTypes.Male.ToString(), SexTypes.Female.ToString() })"></select>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.StatusOfEducation" class="form-control" placeholder="Please enter your StatusOfEducation." />
                <label asp-for="Input.StatusOfEducation" class="form-label"></label>
                <span asp-validation-for="Input.StatusOfEducation" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DateOfBirth" class="form-control" placeholder="Please enter your DateOfBirth." />
                <label asp-for="Input.DateOfBirth" class="form-label"></label>
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
