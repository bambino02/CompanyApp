@page
@model CompanyApp.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            height: 100vh;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background-image: url("/images/login_background.png");
            background-size: cover;
            filter: opacity(70%);
        }

        .login-container {
            background-color: rgba(255, 255, 255, 0.6);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            width: 450px;
            text-align: center;
            font-size: 20px;
        }

        .form-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 15px;
            font-size: 20px;
        }

        .form-control {
            margin-bottom: 20px;
            font-size: 16px;
            padding: 10px;
        }

        .btn-primary {
            font-size: 20px;
            padding: 10px 20px;
        }

        .form-check {
            display: flex;
            align-items: center;
            justify-content: flex-start;
        }
    </style>
</head>
<body>
    <div class="background-container"></div>
    <div class="login-container">
        <h1>@ViewData["Title"]</h1>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <div class="form-group form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </div>
        </form>
        <hr />
        <div>
            <a asp-page="/Account/Register">Register as a new user</a>
        </div>
    </div>
</body>
</html>
